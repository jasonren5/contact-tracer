{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": ["warn", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
        "react/prop-types": ["warn"],
        "no-extra-semi": ["warn"],
        "react/jsx-key": ["warn"],
        "react/no-unescaped-entities": ["warn"],
        "react/display-name": ["warn"],
        "no-case-declarations": [0]
    }
}
